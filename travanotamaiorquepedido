IF ((:object_type = '18') AND (:transaction_type = 'A')) THEN


IF((SELECT T0."DocTotal" - T2."DocTotal"
FROM OPCH T0  
INNER JOIN PCH1 T1 ON T0."DocEntry" = T1."DocEntry"
INNER JOIN OPOR T2 ON T1."BaseEntry" = T2."DocEntry"
WHERE T0."DocEntry"=:list_of_cols_val_tab_del)) >= (Select "U_PercExc"  from "@URCA_CONTROLEEX" where "Name" = '18')
		then		
			error_message := 'SAP - Valor da nota maior que o pedido!';
			error := 18;
		END IF;
			
end if;

